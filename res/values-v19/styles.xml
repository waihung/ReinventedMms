<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MmsHoloTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MockupMainAB</item>
        <item name="android:actionBarWidgetTheme">@style/Mockup.Widget</item>
         <item name="android:windowTranslucentStatus">true</item>
<item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="Mockup.Widget" parent="@android:style/Theme.Holo">
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MockupMainAB" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#00000000</item>
    </style>    
    
<style name="Reinvented.MMS.Widget" parent="@android:style/Theme.Holo">
    <item name="android:textColorHint">#ffffff</item>
    <item name="android:textColor">#ffffff</item>
</style> 

    <style name="MMSPrerencesTheme" parent="@android:style/Theme.Holo.Light">
    <item name="android:fitsSystemWindows">true</item>
    <item name="android:background">#FFfafafa</item>
    <item name="android:fontFamily">sans-serif-thin</item>
    <item name="android:actionBarStyle">@style/MMSPreferencesAB</item>
    <item name="android:titleTextStyle">@style/ActionBar.TitleText</item>
    </style>
    
    <style name="ActionBar.TitleText" parent="@android:style/Theme.Holo.Light">
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>    
    
    <style name="MMSPreferencesAB" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#00000000</item>
        <item name="android:titleTextStyle">@style/MMSPrefs.ActionBar.TitleTextStyle</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>  
    
  <style name="MMSPrefs.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">#FF111111</item>
    <item name="android:fontFamily">sans-serif-thin</item>
  </style>          
    
   
</resources>
