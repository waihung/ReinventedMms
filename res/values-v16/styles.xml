<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MmsHoloTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MMSAB</item>
        <item name="android:actionBarWidgetTheme">@style/MMS.Widget</item>
<item name="android:fitsSystemWindows">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorHint">#111111</item>
        <item name="android:textColor">#111111</item>        
    </style>
    
    <style name="MMS.Widget" parent="@android:style/Theme.Holo">
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MMSAB" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#00000000</item>
    </style>    
    
<style name="Reinvented.MMS.Widget" parent="@android:style/Theme.Holo">
    <item name="android:textColorHint">#ffffff</item>
    <item name="android:textColor">#ffffff</item>
</style> 

    <style name="MMSPrerencesTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
    <item name="android:fitsSystemWindows">true</item>
    <item name="android:background">#FFfafafa</item>
    <item name="android:fontFamily">sans-serif-thin</item>
    <item name="android:actionBarStyle">@style/MMSPreferencesAB</item>
    <item name="android:titleTextStyle">@style/ActionBar.TitleText</item>
        <item name="android:textColorHint">#111111</item>
        <item name="android:textColor">#111111</item>     
    </style>
    
    <style name="ActionBar.TitleText" parent="@android:style/Theme.Holo.Light">
        <item name="android:textColorHint">#111111</item>
        <item name="android:textColor">#111111</item> 
        <item name="android:fontFamily">sans-serif-light</item>
    </style>    
    
    <style name="MMSPreferencesAB" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#fafafa</item>
        <item name="android:titleTextStyle">@style/MMSPrefs.ActionBar.TitleTextStyle</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>  
    
  <style name="MMSPrefs.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColorHint">#111111</item>
        <item name="android:textColor">#111111</item> 
    <item name="android:fontFamily">sans-serif-thin</item>
  </style> 
  
    <style name="SendMMS" parent="@android:style/Theme.Holo.Light">
         <item name="android:actionBarStyle">@style/SendMMSAB</item>
         <item name="android:fontFamily">sans-serif-thin</item>
         <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowContentOverlay">@null</item>    
    </style>
    
    <style name="SendMMSAB" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/SendMMS.ActionBar.TitleTextStyle</item>
        <item name="android:background">#fafafa</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>            
    
   
</resources>
