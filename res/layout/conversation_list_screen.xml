<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#3f51b5" >  

<android.support.v4.widget.DrawerLayout 
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="horizontal"
    android:fitsSystemWindows="true" 
    android:background="#FFfafafa"
    android:hapticFeedbackEnabled="false"
    android:overScrollMode="always" >
    
        <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFfafafa" > 
        
        <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFfafafa" >

        <include layout="@layout/banner_sms_promo" />
        
    </RelativeLayout>        
    </FrameLayout>
    
    <ListView android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="75dp"
        android:layout_below="@+id/banner_sms_promo"
        android:drawSelectorOnTop="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:background="#FFfafafa"
        android:divider="@android:color/transparent"
        android:dividerHeight="18dp"
        android:overScrollMode="never"
        android:scrollbars="none" />

    <TextView android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:src="@drawable/nomessages"
        android:textColor="#FF242424"
        android:text="@string/loading_conversations"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="270.00dp"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:background="#Fffafafa"
        android:choiceMode="singleChoice"
        android:divider="@null"
        android:dividerHeight="1.00dp"
        android:longClickable="false"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:scrollingCache="true" />      

</android.support.v4.widget.DrawerLayout>     
</FrameLayout>
