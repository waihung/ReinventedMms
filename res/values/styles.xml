<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance">
        <item name="android:textColorLink">#5C5CFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.SearchResult">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextAppearance.SearchResult.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.SearchResult.Subtitle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MmsHoloTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:actionBarStyle">@style/MockupMainAB</item>
        <item name="android:actionBarWidgetTheme">@style/Mockup.Widget</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="Mockup.Widget" parent="@android:style/Theme.Holo">
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MockupMainAB" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#3f51b5</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>    
    
<style name="Reinvented.MMS.Widget" parent="@android:style/Theme.Holo">
    <item name="android:textColorHint">#ffffff</item>
    <item name="android:textColor">#ffffff</item>
</style>    
    
    <style name="ReinventedMMSMainAB" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#00000000</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="WidgetTitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="NotificationPrimaryText">
        <item name="android:textColor">#cccccc</item>
    </style>

    <style name="NotificationSecondaryText">
        <item name="android:textColor">#666666</item>
    </style>

    <style name="NotificationSubjectText">
        <item name="android:textColor">#999999</item>
    </style>

    <style name="TextShadowLight">
        <item name="android:textColor">@color/solid_white</item>
        <item name="android:shadowColor">@color/text_shadow_color_light</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="BannerTitleText" parent="TextShadowLight">
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BannerContentText" parent="TextShadowLight">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="MMSPrerencesTheme" parent="@android:style/Theme.Holo.Light">
    <item name="android:fitsSystemWindows">true</item>
    <item name="android:background">#FFfafafa</item>
    <item name="android:fontFamily">sans-serif-thin</item>
    <item name="android:actionBarStyle">@style/MMSPreferencesAB</item>
    <item name="android:titleTextStyle">@style/ActionBar.TitleText</item>
    </style>
    
    <style name="ActionBar.TitleText" parent="@android:style/Theme.Holo.Light">
        <item name="android:textColor">#111111</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>    
    
    <style name="MMSPreferencesAB" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#fafafa</item>
        <item name="android:titleTextStyle">@style/MMSPrefs.ActionBar.TitleTextStyle</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>   
    
  <style name="MMSPrefs.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">#FF111111</item>
    <item name="android:fontFamily">sans-serif-thin</item>
  </style>      
    
    <style name="SendMMS" parent="@android:style/Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/SendMMSAB</item>
    <item name="android:fontFamily">sans-serif-thin</item>
    </style>
    
    <style name="SendMMSAB" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/SendMMS.ActionBar.TitleTextStyle</item>
        <item name="android:background">#009688</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>  
    
  <style name="SendMMS.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">#FF111111</item>
    <item name="android:fontFamily">sans-serif-thin</item>
  </style>  
  
    <style name="GoogleNavDrawer.MainSectionText" parent="android:TextAppearance.Medium">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">21sp</item>
        <item name="android:minHeight">@dimen/main_section_item_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="GoogleNavDrawer.SecondarySectionText" parent="GoogleNavDrawer.MainSectionText">
        <item name="android:textSize">13sp</item>
        <item name="android:minHeight">@dimen/secondary_section_item_height</item>
    </style>       

</resources>
